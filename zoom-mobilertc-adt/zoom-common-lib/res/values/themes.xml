<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="ZMTheme" parent="android:Theme">
		<item name="android:windowBackground">@drawable/zm_window_bg</item>
		<item name="android:buttonStyle">@style/ZMButton</item>
		<item name="android:buttonStyleSmall">@style/ZMButton.Small</item>
		<item name="android:textViewStyle">@style/ZMTextView</item>
		<item name="android:editTextStyle">@style/ZMEditText</item>
		<item name="android:windowTitleBackgroundStyle">@style/ZMWindowTitleBackground</item>
		<item name="android:spinnerStyle">@style/ZMSpinner</item>
		<item name="android:listSeparatorTextViewStyle">@style/ZMListSeparator</item>
		<item name="android:listViewStyle">@style/ZMListView</item>
		<item name="android:scrollViewStyle">@style/ZMScrollView</item>
		<item name="android:checkboxStyle">@style/ZMCheckbox</item>
		<item name="android:radioButtonStyle">@style/ZMRadioButton</item>
		<item name="android:listChoiceIndicatorMultiple">@drawable/zm_btn_check_default</item>
		<item name="android:progressBarStyle">@style/ZMProgressBar</item>
		<item name="android:progressBarStyleHorizontal">@style/ZMProgressBar.Horizontal</item>
		<item name="android:progressBarStyleSmall">@style/ZMProgressBar.Small</item>
		<item name="android:seekBarStyle">@style/ZMSeekBar</item>
<!-- 
		<item name="android:windowActionBar">false</item>
		<item name="android:actionBarStyle">@style/ZMActionBar</item>
		<item name="android:popupMenuStyle">@style/ZMListPopupMenu</item>
 -->
 		
 		<item name="zm_tipAppearance">@style/ZMTip</item>
 		<item name="zm_settingsLayoutAppearance">@style/ZMSettingsLayout</item>
 		<item name="zm_settingsCategoryAppearance">@style/ZMSettingsCategory</item>
	</style>
	
	<style name="ZMTheme.NoTitle">
		<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="ZMTheme.MainWindow" parent="ZMTheme.NoTitle">
	    <item name="android:windowBackground">@drawable/zm_window_bg</item>
	</style>
	
	<style name="ZMTheme.SubWindow" parent="ZMTheme.NoTitle">
	</style>
	
	<style name="ZMTheme.WithActionBar">
		<item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="ZMTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
	
	<style name="ZMTheme.Float">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ZMDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/zm_dialog_bg</item>
		<item name="android:buttonStyle">@style/ZMButton</item>
		<item name="android:textViewStyle">@style/ZMTextView</item>
		<item name="android:editTextStyle">@style/ZMEditText</item>
		<item name="android:windowTitleBackgroundStyle">@style/ZMWindowTitleBackground</item>
		<item name="android:spinnerStyle">@style/ZMSpinner</item>
		<item name="android:listSeparatorTextViewStyle">@style/ZMListSeparator</item>
		<item name="android:listViewStyle">@style/ZMListView</item>
		<item name="android:scrollViewStyle">@style/ZMScrollView</item>
		<item name="android:checkboxStyle">@style/ZMCheckbox</item>
		<item name="android:progressBarStyle">@style/ZMProgressBar</item>
		<item name="android:progressBarStyleHorizontal">@style/ZMProgressBar.Horizontal</item>
		<item name="android:progressBarStyleSmall">@style/ZMProgressBar.Small</item>
		
		<item name="zm_tipAppearance">@style/ZMTip</item>
	</style>
	
    <style name="ZMDialog.Slide" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@null</item>
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
	</style>

    <style name="ZMDialog.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
	</style>

    <style name="ZMDialog.Material">
        <item name="android:windowBackground">@color/zm_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
		<item name="android:editTextStyle">@style/ZMEditText.Dialog</item>
		<item name="android:buttonStyle">@style/ZMButton.dialog.blue</item>
	</style>
	
    <style name="ZMDialog.Material.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
	</style>
	
    <style name="ZMDialog.Material.RoundRect">
        <item name="android:windowBackground">@drawable/zm_dialog_white_roundrect_bg</item>
	</style>    
    
    <style name="ZMDialog.HideSoftKeyboard">
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

</resources>
